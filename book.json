{
    "title": "闪影",
    "description": "闪影地图编辑器",
    "author": "影",
    "language": "zh-hans",
    "root": ".",
    "plugins": [
    "toggle-chapters",
    "splitter",
    "-lunr",
    "-search",
    "search-plus",
     "my-toolbar",
     "-sharing",
     "back-to-top-button",
     "anchors",
     "donate",
     "github-buttons@2.1.0",
     "edit-link"
    ],
    "pluginsConfig": {
        "tags": {
            "placement": "bottom"
        },
        "etoc": {
            "h2lb": 3,
            "mindepth": 3,
            "maxdepth": 4,
            "notoc": false
        },
        "my-toolbar": {
            "buttons":
            [
                {
                    "label": "Share page title and link on Twitter",
                    "icon": "fa fa-twitter",
                    "position":"left",
                    "url": "http://baidu.com"
                } 
            ]
        },
        "donate": {
            "wechat": "images/wechatpay.jpg",
            "alipay": "images/alipay.jpg",
            "title": "",
            "button": "打赏",
            "alipayText": "支付宝打赏",
            "wechatText": "微信打赏"
        },
        "github-buttons": {
            "repo": "xiaoheiwang.com",
            "types": [
                "star"
            ],
            "size": "small"
        },
        "edit-link": {
            "base": "https://github.com/darrenliuwei/gitbook/edit/master",
            "label": "Edit This Page"
        }
    }
}
